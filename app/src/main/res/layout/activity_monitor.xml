<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ovia.hackathon.babyandme.MonitorActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="splash3"
        android:text="Done"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="431dp" />

    <TextView
        android:id="@+id/textViewM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mom Sleep"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="247dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/country_arrays"
        android:prompt="@string/country_prompt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="293dp" />

    <TextView
        android:id="@+id/textViewM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby Sleep"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="144dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/country_arrays"
        android:prompt="@string/country_prompt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="191dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="349dp" />

    <TextView
        android:id="@+id/textViewM3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happiness"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="349dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Water"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="86dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Feeding"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="86dp" />
</android.support.constraint.ConstraintLayout>
